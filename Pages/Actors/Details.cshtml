@page
@model KareAjans.Pages.Actors.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.ContractPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actor.ContractPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actor.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actor.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actor.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actor.Address)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Contracts)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Contract ID</th>
                    <th>Managing Staff</th>
                    <th>Total Price</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                </tr>
                @foreach (var item in Model.Actor.Contracts)
                {
                    <tr>
                        <td>
                            <a asp-page="/Contracts/Details" asp-route-id="@item.ID">
                                @Html.DisplayFor(modelItem => item.ID)
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ManagingStaff, "StaffTemplate")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Actor.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
