@page
@model KareAjans.Pages.Actors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Actors</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form asp-page="./Index" method="get">
    <div class="form-group">
        <input class="form-control my-2" type="text" placeholder="Search for actor by name..." name="SearchString" value="@Model.CurrentFilter" />
        <input type="submit" value="Search" class="btn btn-primary mr-2" />
        <a asp-page="./Index" class="my-auto">Back to list</a>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@(Model.CurrentSort == "ContractPrice" ? "ContractPrice_desc" : "ContractPrice")" asp-route-searchString="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Actor[0].ContractPrice)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@(Model.CurrentSort == "FirstName" ? "FirstName_desc" : "FirstName")" asp-route-searchString="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Actor[0].FirstName)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@(Model.CurrentSort == "LastName" ? "LastName_desc" : "LastName")" asp-route-searchString="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Actor[0].LastName)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@(Model.CurrentSort == "PhoneNumber" ? "PhoneNumber_desc" : "PhoneNumber")" asp-route-searchString="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Actor[0].PhoneNumber)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@(Model.CurrentSort == "Address" ? "Address_desc" : "Address")" asp-route-searchString="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Actor[0].Address)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Actor)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ContractPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
